{% extends 'base.html.twig' %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% if articles is not empty %}
    <div class="example-wrapper">
        <h1>Articles de l'année {{ year }}</h1>
        <table class="mt-3 table table-light table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Date de Création</th>
                    <th>Détails</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.titre }}</td>
                        <td>{{ article.dateCreation|date('Y-m-d H:i:s') }}</td>
                        <td><a href="{{ path('app_article_detail', {'id': article.id}) }}">Détails</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
        <p>Aucun article disponible pour l'année {{ year }}.</p>
    {% endif %}
{% endblock %}